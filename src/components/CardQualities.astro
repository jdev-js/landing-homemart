---
interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<div class='grid gap-4 justify-items-center text-center md:flex-1'>
  <div class='rounded-full border-8 border-amber-400 p-4'>
    <slot />
  </div>
  <h3 class='text-3xl font-bold'>{title}</h3>
  <p>{description}</p>
</div>
