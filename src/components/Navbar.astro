---
const ArrayFromItemMenu = ['Home', 'Contact', 'Login']
---

<nav class='mx-auto p-4 bg-amber-400'>
  <div class='container mx-auto flex items-center justify-between'>
    <a
      class='focus:outline-none focus-visible:ring-4 ring-neutral-900 rounded-sm ring-offset-4 ring-offset-amber-400 lg:absolute lg:left-1/2 lg:mt-5 lg:-translate-x-1/2 lg:top-0 z-50 hover:opacity-75 transition-opacity'
      href='/'
      aria-label='Go to homepage'
    >
      <img
        class='w-48 md:w-64 lg:w-72'
        src='../../public/logo.svg'
        width='200'
        alt='Home smart logo'
      />
    </a>

    <button
      id='menu'
      aria-label='Open menu'
      aria-expanded='false'
      class='lg:hidden focus:outline-none focus-visible:ring-4 ring-neutral-900 rounded-sm ring-offset-4 ring-offset-amber-400 text-neutral-900 hover:text-neutral-600 transition-colors'
    >
      <svg
        class='w-8 h-8'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
        stroke-width='2'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M4 6h16M4 12h16M4 18h16'></path>
      </svg>
    </button>
    <div
      role='menubar'
      class='hidden flex-col items-center lg:flex-row lg:flex lg:static lg:shadow-none lg:justify-between lg:w-full gap-4 absolute right-0 left-0 top-16 bg-amber-400 shadow-xl text-center text-lg p-6 z-40'
    >
      {
        ArrayFromItemMenu.map((name) => (
          <a
            role='menuitem'
            class:list={[
              'py-1 px-6 dark:text-neutral-900 focus:outline-none focus-visible:ring-4 text-xl ring-neutral-900 rounded-sm ring-offset-4 ring-offset-amber-400 hover:text-neutral-600 transition-colors',
              `${name.toLowerCase() === 'contact' ? 'lg:mr-auto' : ''}`,
            ]}
            href='/'
          >
            {name}
          </a>
        ))
      }
      <a
        role='menuitem'
        class='py-2 px-6 bg-teal-900 text-white shadow-xl hover:shadow-none transition-shadow focus:outline-none focus-visible:ring-4 ring-neutral-900 rounded-md ring-offset-4 ring-offset-amber-400'
        href='/'
      >
        Sign Up
      </a>
    </div>
  </div>
</nav>
<script>
  const $navBtn = document.querySelector('#menu')
  const $menuBar = document.querySelector('[role="menubar"')

  $navBtn?.addEventListener('click', (e) => {
    const isExpanded = JSON.parse($navBtn.getAttribute('aria-expanded') || '')
    $navBtn.setAttribute('aria-expanded', `${!isExpanded}`)
    $menuBar?.classList.toggle('hidden')
    $menuBar?.classList.toggle('flex')
  })
</script>
